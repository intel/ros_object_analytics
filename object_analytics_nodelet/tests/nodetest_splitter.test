<launch>
  <arg name="manager"                       default="TestObjectAnalyticsMgr" />

  <group ns="ns">
     <include file="$(find object_analytics_launch)/launch/includes/manager.launch">
         <arg name="name"                      value="$(arg manager)" />
         <arg name="num_worker_threads"        value="1" />
     </include>

     <include file="$(find object_analytics_launch)/launch/includes/splitter.launch">
         <arg name="manager"                   value="$(arg manager)" />
         <arg name="input"                     value="pc2" />
     </include>

     <node name="TestPC2Publisher" pkg="object_analytics_nodelet" type="pc2_publisher" />

     <test name="publishtest"
               test-name="publishtest"
               pkg="rostest"
               type="publishtest">
        <rosparam>
  topics:
    - name: /ns/rgb
      timeout: 2
      negative: False
    - name: /ns/pointcloud
      timeout: 2
      negative: False
        </rosparam>
    </test>
  </group>
</launch>

